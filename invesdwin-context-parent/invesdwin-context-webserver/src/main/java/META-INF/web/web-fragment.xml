<?xml version="1.0" encoding="UTF-8"?>
<web-fragment>

	<name>de.invesdwin.context.webserver</name>

	<servlet>
		<servlet-name>jetty</servlet-name>
		<servlet-class>org.eclipse.jetty.servlet.DefaultServlet
		</servlet-class>
		<init-param>
			<param-name>dirAllowed</param-name>
			<param-value>false</param-value>
		</init-param>
	</servlet>

	<servlet-mapping>
		<servlet-name>jetty</servlet-name>
		<url-pattern>/jetty/*</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
		<servlet-name>jetty</servlet-name>
		<url-pattern>/</url-pattern>
	</servlet-mapping>

</web-fragment>
